  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Node Container",
      "localRoot": "${workspaceFolder}/backend",
      "processId": "${command:PickProcess}",
      "skipFiles": ["<node_internals>/**"],
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "remoteRoot": "/app/backend",
      "restart": true
    }
  ]
}
